{
  "name": "x2-server",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": ">= 14",
    "yarn": ">= 1"
  },
  "scripts": {
    "clean": "lerna clean",
    "build": "tsc --build --verbose",
    "start:elastic-pst": "lerna run --scope @klonzo/elastic-pst start --stream",
    "watch:elastic-server": "lerna run --scope @klonzo/elastic-server watch --stream",
    "start:mongodb-pst": "lerna run --scope @klonzo/mongodb-pst start --stream",
    "watch:mongodb-server": "lerna run --scope @klonzo/mongodb-server watch --stream",
    "start:postgres-pst": "lerna run --scope @klonzo/postgres-pst start --stream",
    "watch:postgres-server": "lerna run --scope @klonzo/postgres-server watch --stream",
    "yarn": "yarn"
  },
  "devDependencies": {
    "lerna": "latest",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react-hooks": "^4.1.0",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "auto"
  }
}